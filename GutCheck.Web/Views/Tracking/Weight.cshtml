@model GutCheck.Web.Models.WeightViewModel

<h1>Track Weight</h1>
<partial name="../Shared/_ServerMessages.cshtml"></partial>
<article>
    <form asp-controller="Tracking" asp-action="SaveWeight" method="POST">
        <label asp-for="@Model.Data.Weight"></label>
        <input asp-for="@Model.Data.Weight" type="number" />
        <label asp-for="@Model.Data.Date"></label>
        <input asp-for="@Model.Data.Date" type="date" />
        <button type="submit">Submit</button>
    </form>
</article>